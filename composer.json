{
    "name": "cschindl/php-openapi-mock-middleware",
    "description": "Middleware to generate fake data for OpenAPI request/response/schemas.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Carsten Schindler",
            "email": "cschindl@gmx.de"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7",
        "phpstan/phpstan-phpunit": "^1",
        "phpunit/phpunit": "^9.5"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cschindl\\OpenAPIMock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cschindl\\OpenAPIMock\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "codestyle": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-clover=.build/phpunit/clover.xml"
    }
}
